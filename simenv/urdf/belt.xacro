<?xml version="1.0" encoding="utf-8"?>
<robot name="belt">

  <link name="virtualLink"/>

  <joint name="joint_fix" type="fixed">
    <parent link="virtualLink"/>
    <child link="belt_base_link"/>
  </joint>

  <link name="belt_base_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1.0 9.0 0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1.0 9.0 0.1"/>
      </geometry>
    </visual>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
    </inertial>
  </link>

  <joint name="dbelt_joint" type="planar">
    <parent link = "virtualLink"/>
    <child link = "dbelt" />
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="0.3" lower="0.0" upper="9.0"/>
  </joint>

  <link name="dbelt">
    <collision>
      <origin xyz="0 -4.25 -0.01" rpy="0 0 0"/>
      <geometry>
        <box size= "1.0 0.5 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 -4.25 -0.01" rpy="0 0 0"/>
      <mass value="1000"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
    </inertial>
  </link>

  <gazebo>
    <plugin name="object_controller" filename="libgazebo_ros_planar_move.so">
      <commandTopic>belt_cmd_vel</commandTopic>
      <odometryTopic>belt_odom</odometryTopic>
      <odometryFrame>belt_odom</odometryFrame>
      <odometryRate>20.0</odometryRate>
      <robotBaseFrame>dbelt</robotBaseFrame>
    </plugin>
  </gazebo>

</robot>
